<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="brainlink.tvController">
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8"/>

	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" />

	<!-- the permission of creating and deleting file from sd card -->
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
	<!-- the permission of writing data to sd card -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
	
    <application android:label="@string/app_name" android:icon="@drawable/power_button">
        <activity android:label="@string/app_name" android:name="TVController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>