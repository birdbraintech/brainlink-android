<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Main Frame Styles -->
	<style name="header_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">43dip</item>
		<item name="android:orientation">horizontal</item>
		
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:layout_marginTop">50dip</item>
	</style>
	<style name="header_text">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/dark_gray</item>
		<item name="android:textSize">25dip</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:singleLine">true</item>
		<item name="android:shadowColor">#333333</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="common_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#000</item>
		<item name="android:textSize">10dip</item>
		<item name="android:shadowColor">#333333</item>
	</style>
	<style name="body_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>

	</style>
	<style name="content_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginLeft">9dip</item>
		<item name="android:layout_marginRight">9dip</item>
		<item name="android:paddingLeft">15dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="content_layout_no_margin">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">15dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="tab_text">
		<item name="android:textSize">10dip</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center|bottom</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
	<style name="help_subject">
		<item name="android:textSize">16.5dip</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#842102</item>
		<item name="android:shadowColor">#FFF776</item> 
		<item name="android:textStyle">bold</item>
		<item name="android:shadowRadius">0.1</item> 
		<item name="android:shadowDx">1</item> 
		<item name="android:shadowDy">-1</item> 
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:layout_marginTop">10dip</item>
		<item name="android:layout_marginBottom">10dip</item>
	</style>
	<style name="help_content">
		<item name="android:textSize">14dip</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center|bottom</item>
		<item name="android:textColor">#842102</item>
		<item name="android:shadowColor">#FFF776</item> 
		<item name="android:textStyle">bold</item>
		<item name="android:shadowRadius">0.1</item> 
		<item name="android:shadowDx">1</item> 
		<item name="android:shadowDy">-1</item> 
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>
	
	<style name="top_bar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
	</style>
	
	
</resources>
